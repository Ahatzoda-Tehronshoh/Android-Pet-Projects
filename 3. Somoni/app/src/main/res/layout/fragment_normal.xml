<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/refreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33E5E5E5"
    tools:context=".profitable.NormalFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notAnswerImageView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/ic_baseline_cloud_off_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:overScrollMode="never"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/highestCurrency" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/highestCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:layout_margin="16dp"
                    android:outlineAmbientShadowColor="@color/black"
                    android:outlineSpotShadowColor="@color/black"
                    app:cardElevation="32dp"
                    app:layout_constraintBottom_toTopOf="@id/recyclerView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:contentDescription="Icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/shareImageButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_baseline_share_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bankName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:maxWidth="230dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@id/icon"
                            app:layout_constraintEnd_toStartOf="@+id/imageView"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@id/icon"
                            app:layout_constraintTop_toTopOf="@id/icon" />

                        <TextView
                            android:id="@+id/qwer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:maxWidth="300dp"
                            android:text="@string/BenefitCurrencyfromTranslation"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:ellipsize="end"
                            android:maxLines="1"
                            app:layout_constraintBottom_toTopOf="@id/view"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view2" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#1EFFFFFF"
                            app:layout_constraintBottom_toTopOf="@id/mode"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/qwer2" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#1EFFFFFF"
                            app:layout_constraintBottom_toTopOf="@id/qwer2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/bankName" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#1EFFFFFF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view2" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/mode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minWidth="250dp"
                            android:scrollbars="horizontal"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            app:layout_constraintBottom_toTopOf="@id/view3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view2">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/longMode"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                android:id="@+id/currencyText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/Currency"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toTopOf="@id/currency"
                                app:layout_constraintEnd_toEndOf="@id/currency"
                                app:layout_constraintStart_toStartOf="@id/currency" />

                            <TextView
                                android:id="@+id/buyText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/Buy"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toTopOf="@id/buy"
                                app:layout_constraintEnd_toEndOf="@id/buy"
                                app:layout_constraintStart_toStartOf="@id/buy" />

                            <TextView
                                android:id="@+id/saleText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/Sale"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toTopOf="@id/sale"
                                app:layout_constraintEnd_toEndOf="@id/sale"
                                app:layout_constraintStart_toStartOf="@id/sale" />

                            <TextView
                                android:id="@+id/currency"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="1 RUB"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toStartOf="@id/buy"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/buy"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="0.1350"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/sale"
                                app:layout_constraintStart_toEndOf="@id/currency" />

                            <TextView
                                android:id="@+id/sale"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="0.1380"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                app:layout_constraintStart_toEndOf="@id/buy"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/shortMode"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/currencyShortMode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="1 RUB"
                                    android:textColor="@color/white"
                                    android:textSize="24sp"
                                    android:textAlignment="center"
                                    app:layout_constraintEnd_toStartOf="@id/arrow"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <ImageView
                                    android:id="@+id/arrow"
                                    android:layout_width="28dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/currencyShortMode"
                                    app:layout_constraintEnd_toStartOf="@+id/buyShortMode"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arrow"/>

                                <TextView
                                    android:id="@+id/buyShortMode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="0.1350"
                                    android:textColor="@color/white"
                                    android:textSize="24sp"
                                    android:textAlignment="center"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/arrow" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="20dp"
                            android:backgroundTint="@color/transparent"
                            android:elevation="0dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view3"
                            app:strokeWidth="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/convertWithThisCurrency"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                        </com.google.android.material.card.MaterialCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/recyclerView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/highestCurrency1">

                        <include layout="@layout/shimmer_layout" />

                        <include layout="@layout/shimmer_layout" />

                        <include layout="@layout/shimmer_layout" />

                        <include layout="@layout/shimmer_layout" />

                        <include layout="@layout/shimmer_layout" />

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/highestCurrency1"
                        android:layout_width="match_parent"
                        android:layout_height="275dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:layout_constraintBottom_toTopOf="@id/recyclerView1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#959595">

                            <View
                                android:id="@+id/view21"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ddd"
                                app:layout_constraintBottom_toTopOf="@id/qwer1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/qwer21" />

                            <View
                                android:id="@+id/view1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#ddd"
                                app:layout_constraintBottom_toTopOf="@id/qwer21"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/bankName1" />

                            <View
                                android:id="@+id/view31"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ddd"
                                app:layout_constraintBottom_toTopOf="@id/qwer5"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/qwer1" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/bankName1"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:background="#ddd"
                                app:cardCornerRadius="15dp"
                                app:layout_constraintBottom_toBottomOf="@id/icon1"
                                app:layout_constraintEnd_toStartOf="@+id/settingButton1"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@id/icon1"
                                app:layout_constraintTop_toTopOf="@id/icon1" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/settingButton1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                android:background="#ddd"
                                app:cardCornerRadius="12dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/bankName1"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/qwer21"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:background="#ddd"
                                app:cardCornerRadius="15dp"
                                app:layout_constraintBottom_toTopOf="@id/view21"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/view1" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/icon1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:background="#ddd"
                                app:cardCornerRadius="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/qwer1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="20dp"
                                android:backgroundTint="#ddd"
                                android:elevation="0dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toTopOf="@id/view31"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/view21"
                                app:strokeWidth="0dp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/qwer5"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="20dp"
                                android:backgroundTint="#ddd"
                                android:elevation="0dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/view31"
                                app:strokeWidth="0dp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>