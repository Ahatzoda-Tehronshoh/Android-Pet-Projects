<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gradientPut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="@+id/bankIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bankIcon" />

    <ImageView
        android:id="@+id/bankIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/bankName"
        app:layout_constraintEnd_toStartOf="@id/bankName"
        app:layout_constraintTop_toTopOf="@id/bankName"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintBottom_toBottomOf="@+id/bankName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bankName" />

    <TextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="230dp"
        android:maxLines="1"
        android:text="@string/convertWithThisCurrency"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintEnd_toStartOf="@+id/shareButton"
        app:layout_constraintStart_toEndOf="@id/closeButton"/>

    <TextView
        android:id="@+id/qwer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="14dp"
        android:alpha="0.8"
        android:ellipsize="end"
        android:lineHeight="24dp"
        android:text="@string/BenefitCurrencyfromTranslation"
        android:textColor="#DEFFFFFF"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/qwerCurrency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:lineHeight="24dp"
        android:text="@string/Currency"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/qwerBuy"
        app:layout_constraintEnd_toEndOf="@+id/rubleCurrency"
        app:layout_constraintStart_toStartOf="@+id/rubleCurrency"
        app:layout_constraintTop_toTopOf="@id/qwerBuy" />

    <TextView
        android:id="@+id/qwerBuy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:lineHeight="24dp"
        android:text="@string/Buy"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@+id/rubleBuy"
        app:layout_constraintStart_toStartOf="@+id/rubleBuy"
        app:layout_constraintTop_toBottomOf="@id/view2" />

    <TextView
        android:id="@+id/qwerSell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:lineHeight="24dp"
        android:text="@string/Sale"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@+id/rubleSell"
        app:layout_constraintStart_toStartOf="@+id/rubleSell"
        app:layout_constraintTop_toBottomOf="@id/view2" />

    <TextView
        android:id="@+id/rubleCurrency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Currency"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/rubleBuy"
        app:layout_constraintEnd_toStartOf="@id/rubleBuy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rubleBuy" />

    <TextView
        android:id="@+id/rubleBuy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Buy"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/view4"
        app:layout_constraintEnd_toStartOf="@id/rubleSell"
        app:layout_constraintStart_toEndOf="@id/rubleCurrency"
        app:layout_constraintTop_toBottomOf="@id/view3" />

    <TextView
        android:id="@+id/rubleSell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Sale"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rubleBuy"
        app:layout_constraintTop_toBottomOf="@id/view3" />

    <TextView
        android:id="@+id/usdCurrency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Currency"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/usdBuy"
        app:layout_constraintEnd_toStartOf="@id/usdBuy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/usdBuy" />

    <TextView
        android:id="@+id/usdBuy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Buy"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/view5"
        app:layout_constraintEnd_toStartOf="@id/usdSell"
        app:layout_constraintStart_toEndOf="@id/usdCurrency"
        app:layout_constraintTop_toBottomOf="@id/view4" />

    <TextView
        android:id="@+id/usdSell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Sale"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/usdBuy"
        app:layout_constraintTop_toBottomOf="@id/view4" />

    <TextView
        android:id="@+id/eurCurrency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Currency"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/eurBuy"
        app:layout_constraintEnd_toStartOf="@id/eurBuy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/eurBuy" />

    <TextView
        android:id="@+id/eurBuy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Buy"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/view6"
        app:layout_constraintEnd_toStartOf="@id/eurSell"
        app:layout_constraintStart_toEndOf="@id/eurCurrency"
        app:layout_constraintTop_toBottomOf="@id/view5" />

    <TextView
        android:id="@+id/eurSell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="24dp"
        android:text="@string/Sale"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/view6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/eurBuy"
        app:layout_constraintTop_toBottomOf="@id/view5" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="#1FFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bankName" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#1FFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qwer" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="#1FFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qwerCurrency" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="#1FFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rubleCurrency" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="#1FFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usdCurrency" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="#1FFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eurCurrency" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/convertButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="24dp"
        android:backgroundTint="@color/transparent"
        android:elevation="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:strokeWidth="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/convertWithThisCurrency"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>