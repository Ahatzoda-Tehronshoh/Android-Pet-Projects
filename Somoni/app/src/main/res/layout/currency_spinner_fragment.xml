<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qwer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rubleChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/qwer2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/rubleIcon"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/rubleFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:lineHeight="26dp"
                android:textColor="#DE000000"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/qwer2"
                app:layout_constraintStart_toEndOf="@id/qwer2"
                app:layout_constraintTop_toTopOf="@id/qwer2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/usdChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/qwer3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/usdIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/usdFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:lineHeight="26dp"
                android:textColor="#DE000000"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/qwer3"
                app:layout_constraintStart_toEndOf="@id/qwer3"
                app:layout_constraintTop_toTopOf="@id/qwer3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eurChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="41dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/qwer4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <ImageView
                    android:id="@+id/eurIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/eurFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:lineHeight="26dp"
                android:textColor="#DE000000"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/qwer4"
                app:layout_constraintStart_toEndOf="@id/qwer4"
                app:layout_constraintTop_toTopOf="@id/qwer4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/qwer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:lineHeight="26dp"
        android:text="@string/currencyChoose"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>