<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/counter_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1. "
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/test"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/counter_test"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Се мург дар се руз се тухм медихад. 12 мурғ ба ҳамин монанд дар 12 рӯз чанд тухм мегузоранд?"/>

    <TextView
        android:id="@+id/choosing_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="@color/gradient_start_color"
        tools:text="54 - нодуруст"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test"
        app:layout_constraintStart_toStartOf="@id/test"/>


</androidx.constraintlayout.widget.ConstraintLayout>