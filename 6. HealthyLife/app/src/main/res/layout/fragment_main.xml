<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    tools:context=".MainFragment">

    <ImageView
        android:id="@+id/pick_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_traced"
        app:layout_constraintBottom_toBottomOf="@+id/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/app_name"
        app:tint="@color/text_color" />

    <LinearLayout
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/healthy_HAVE_NOT_GOT_TRANSLATE"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/life_HAVE_NOT_GOT_TRANSLATE"
            android:textColor="@color/first_main_color"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintBottom_toBottomOf="@+id/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/app_name"
        app:tint="@color/text_color" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/alcohol_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/card_view_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/alcohol_control_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        app:layout_constraintBottom_toBottomOf="@id/alcohol_control"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/alcohol_control"
                        app:layout_constraintTop_toTopOf="@id/alcohol_control"
                        app:tint="@color/first_main_color" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/alcohol_control"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/control_alcohol"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toTopOf="@id/alcohol_calculator_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/alcohol_calculator_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alcohol_control">

                    <View
                        android:id="@+id/alcohol_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@color/text_color_twenty"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                        <LinearLayout
                            android:id="@+id/alcohol_all_life"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/all_life_alcohol"
                                android:textColor="@color/text_color"
                                android:textSize="12sp"
                                android:fontFamily="@font/rubik_medium"/>

                            <!--I use CarView because
                                android:foreground="?selectableItemBackground"
                                doesn't work with MaterialCardView-->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/alcohol_all_life_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="10dp"
                                android:foreground="?selectableItemBackgroundBorderless"
                                app:cardBackgroundColor="@color/first_main_color"
                                android:layout_marginVertical="24dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calculate"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/rubik_medium"
                                    android:textColor="@color/white"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="32dp"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/alcohol_during_the_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@id/alcohol_all_life"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/during_the_time"
                                android:textColor="@color/text_color"
                                android:textSize="12sp"
                                android:fontFamily="@font/rubik_medium"/>

                            <!--I use CarView because
                                                            android:foreground="?selectableItemBackground"
                                                            doesn't work with MaterialCardView-->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/alcohol_during_the_time_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="10dp"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardBackgroundColor="@color/first_main_color"
                                android:layout_marginVertical="24dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calculate"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/rubik_medium"
                                    android:textColor="@color/white"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="32dp"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/alcohol_until_current_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/alcohol_during_the_time"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/how_much_spend_until_current_time_alcohol"
                                android:textColor="@color/text_color"
                                android:textSize="12sp"
                                android:fontFamily="@font/rubik_medium"/>

                            <!--I use CarView because
                                android:foreground="?selectableItemBackground"
                                doesn't work with MaterialCardView-->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/alcohol_until_current_time_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="10dp"
                                android:foreground="?selectableItemBackgroundBorderless"
                                app:cardBackgroundColor="@color/first_main_color"
                                android:layout_marginVertical="24dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calculate"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/rubik_medium"
                                    android:textColor="@color/white"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="32dp"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/smoke_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="70dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/card_view_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/smoke_control_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        app:layout_constraintBottom_toBottomOf="@id/smoke_control"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/smoke_control"
                        app:layout_constraintTop_toTopOf="@id/smoke_control"
                        app:tint="@color/first_main_color" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/smoke_control"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/smoke_control"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:layout_marginVertical="20dp"
                        app:layout_constraintBottom_toTopOf="@id/smoke_calculator_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/smoke_calculator_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/smoke_control">

                        <View
                            android:id="@+id/smoke_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@color/text_color_twenty"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>


                        <LinearLayout
                            android:id="@+id/smoke_all_life"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/all_life_smoke"
                                android:textColor="@color/text_color"
                                android:textSize="12sp"
                                android:fontFamily="@font/rubik_medium"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/smoke_all_life_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="10dp"
                                app:cardBackgroundColor="@color/first_main_color"
                                android:layout_marginVertical="24dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calculate"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/rubik_medium"
                                    android:textColor="@color/white"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="32dp"/>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/smoke_during_the_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@id/smoke_all_life"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/during_the_time_smoke"
                                android:textColor="@color/text_color"
                                android:textSize="12sp"
                                android:fontFamily="@font/rubik_medium"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/smoke_during_the_time_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="10dp"
                                app:cardBackgroundColor="@color/first_main_color"
                                android:layout_marginVertical="24dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calculate"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/rubik_medium"
                                    android:textColor="@color/white"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="32dp"/>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/smoke_until_current_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/smoke_during_the_time"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/how_much_spend_until_current_time_smoke"
                                android:textColor="@color/text_color"
                                android:textSize="12sp"
                                android:fontFamily="@font/rubik_medium"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/smoke_until_current_time_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="10dp"
                                app:cardBackgroundColor="@color/first_main_color"
                                android:layout_marginVertical="24dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calculate"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/rubik_medium"
                                    android:textColor="@color/white"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="32dp"/>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>